{
	"manifest_version" : 2,	
	"name" : "Mascot",		
	"version" : "0.1.2",	

	"icons": { "16": "icon-16.png",
    	       "48": "icon-48.png",
        	  "128": "icon-128.png" 
        	  },


	"content_scripts" : [
{
		"matches" : ["*://*.cunyfirst.cuny.edu/*"],
		"css" : ["css/global.css", "css/navigation.css"],
		"js" : ["js/global.js", "js/logger.js", "js/navigation.js", "js/notification-center.js"]
		},
		{
			"matches" : ["*://*.cunyfirst.cuny.edu/psp/cnyepprd/EMPLOYEE/EMPL/h/*"],
			"css": ["css/landing.css"],
			"js" : ["js/landingUI.js"]
		},

		{
			"matches" : ["https://home.cunyfirst.cuny.edu/oam/Portal_Login1.html"],
			"css" : ["css/login.css"],
			"js" : ["js/loginUI.js"]
		}		
	],

	"web_accessible_resources": [

	   	"img/logo_wide_small.png",
	   	"img/studentsfirst-banner.png", 

	    "css/global.css",
	    "css/landing.css",
	    "css/login.css",
	    "css/nav.css"
  ]
}